<resources>

    <!-- Base application theme.   AppCompat.Light.DarkActionBar -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:popupMenuStyle">@style/OptionsMenu</item>
    </style>

    <style name="AppTheme.splash">
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.Light">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/colorBackgroundLight</item>
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkLight</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/colorDividerLight</item>
    </style>

    <style name="AppTheme.Dark">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/colorBackgroundDark</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/colorDividerDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="OptionsMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">?android:textColorHint</item>
    </style>

    <style name="BottomNavigationViewCustom">
        <item name="colorPrimary">@android:color/white</item>
    </style>



    <!--Views styles-->

    <style name="label">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">SAMPLE</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/darkgray</item>
    </style>

</resources>
